@page "/Category"
@using System.Collections.ObjectModel;
@inject IJSRuntime JsRuntime;
@inject ISnackbar Snackbar
@inject IDialogService DialogService
@inject NavigationManager Navigation

<section class="category">
    <div class="category-container">
        <div class="category-title">Bạn muốn mua loại bảo hiểm nào</div>
        <div class="category-list">
            <!--Xe gan may-->
            <div class="category-item" @onclick="Show_Motor">
                <div class="category-item-image">
                    <a href="/Motor">
                        <img src="images/motor.jpg" alt="Xe gắn máy">
                    </a>
                </div>
                <div class="category-item-content">
                    <div class="category-name">
                        <a href="/Motor">Xe gắn máy</a>
                    </div>
                </div>
            </div>
            <!--Xe o to-->
            <div class="category-item" @onclick="Show_Auto">
                <div class="category-item-image">
                    <a href="/Autor">
                        <img src="images/auto.png" alt="Xe ô tô">
                    </a>
                </div>
                <div class="category-item-content">
                    <div class="category-name">
                        <a href="/Autor">Xe ô tô</a>
                    </div>
                </div>
            </div>
            <!--Suc khoe-->
            <div class="category-item">
                <div class="category-item-image">
                    <a href="">
                        <img src="images/health.png" alt="Bảo hiểm sức khỏe">
                    </a>
                </div>
                <div class="category-item-content">
                    <div class="category-name">
                        <a href="">Bảo hiểm sức khỏe</a>
                    </div>
                </div>
            </div>
            <!--Bao hiem tai nan-->
            <div class="category-item">
                <div class="category-item-image">
                    <a href="">
                        <img src="images/works.png" alt="Bảo hiểm tai nạn">
                    </a>
                </div>
                <div class="category-item-content">
                    <div class="category-name">
                        <a href="">Bảo hiểm tai nạn 24/7</a>
                    </div>
                </div>
            </div>
            <!--Bao hiem chay no-->
            <div class="category-item">
                <div class="category-item-image">
                    <a href="">
                        <img src="images/burn.jpg" alt="Bảo hiểm cháy nổ">
                    </a>
                </div>
                <div class="category-item-content">
                    <div class="category-name">
                        <a href="">Bảo hiểm cháy nổ</a>
                    </div>
                </div>
            </div>
            <!--Bao hiem hoc sinh-->
            <div class="category-item">
                <div class="category-item-image">
                    <a href="">
                        <img src="images/student.png" alt="Bảo hiểm học sinh">
                    </a>
                </div>
                <div class="category-item-content">
                    <div class="category-name">
                        <a href="">Bảo hiểm học sinh</a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>


@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    //OnInitializedAsync
    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();


    }

    void Show_Motor()
    {
        Navigation.NavigateTo("/Motor");
    }

    void Show_Auto()
    {
        Navigation.NavigateTo("/Autor");
    }

    

}

